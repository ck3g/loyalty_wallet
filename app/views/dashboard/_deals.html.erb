<h3 class="dashboard__title">Active Deals</h3>

<div class="deals">
  <% if deals.any? %>
    <% deals.each do |deal| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <h3><%= deal.vendor_name %></h3>
          <%= deal.title %>
        </div>
      </div>
    <% end %>
  <% else %>
    There is no active deals for you yet.
  <% end %>
</div>

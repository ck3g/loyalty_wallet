<div class="dashboard dashboard--user">
  <ul class="dashboard__nav">
    <li class="active"><a href="#qr-code" data-toggle="tab">QR Code</a></li>
    <li><a href="#my-cards" data-toggle="tab">My Cards</a></li>
    <li><a href="#deals" data-toggle="tab">Deals</a></li>
    <li><a href="#history" data-toggle="tab">History</a></li>
  </ul>

  <div class="tab-content clearfix">
    <div class="qr-code active" id="qr-code">
      <div class="qr-code__table">
        <%= raw @dashboard.qr_code.as_html %>
      </div>

      <h3 class="qr-code__id"><%= t("users.your_id") %>: <%= @dashboard.user_code %></h3>
    </div>

    <div class="tab-pane" id="history">
      <%= render 'user_activity', dashboard: @dashboard %>
    </div>

    <div class="tab-pane" id="my-cards">
      <%= render 'user_cards', dashboard: @dashboard %>
    </div>

    <div class="tab-pane" id="deals">
      <%= render 'deals', deals: @dashboard.active_deals %>
    </div>
  </div>
</div>

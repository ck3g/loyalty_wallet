<div class="dashboard dashboard--profile center-block">
  <h3 class="dashboard__title">Edit Profile</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: "signup__input" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: "signup__input" } %>
      <%= f.input :password_confirmation, required: false, input_html: { class: "signup__input" } %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: "signup__input" } %>
    </div>

    <div class="form-actions">
      <% if current_user.email == "demovendor@example.com" %>
        <div class="alert alert-warning">
          <strong>Demo Account Warning:</strong> As soon as it's a demo account, we intentionaly disabled possibility to update it.
        </div>
      <% else %>
        <%= f.button :submit, "Update", class: "dashboard__edit-profile" %>
      <% end %>
    </div>
  <% end %>

  <% unless current_user.email == "demovendor@example.com" %>
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <% end %>
</div>


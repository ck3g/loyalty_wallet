<div class="signup row">
  <div class="signup__block center-block">
    <h2 class="signup__title">Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: "signup__input" } %>
        <%= f.input :password, required: false, input_html: { class: "signup__input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", { class: "signup__submit" } %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

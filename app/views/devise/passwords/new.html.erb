<div class="signup row">
  <div class="signup__block center-block">
    <h2 class="signup__title">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: "signup__input" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "signup__submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="user-activity">
  <div class="user-activity__panel">
    <div class="row">
      <div class="col-xs-10 col-md-10 col-lg-10">
        <h4 class="text-left"><%= title %></h4>
      </div>
      <div class="col-xs-2 col-md-2 col-lg-2">
        <h5 class="text-right"><%= current_count %>&nbsp;/&nbsp;<%= Stamp::PRIZE_STAMP_COUNT %></h5>
      </div>
    </div>
    <div class="user-stamp">
      <% Stamp::PRIZE_STAMP_COUNT.times do |i| %>
        <span class="user-stamp__item user-stamp__item--<%= current_count > i ? "success" : "default" %>"></span>
      <% end %>
    </div>
    <div class="text-muted text-right">
      <%= date %>
    </div>
  </div>
</div>

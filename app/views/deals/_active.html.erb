<div class="row">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <% if active_deals.any? %>
      <% active_deals.each do |deal| %>
        <div class="row">
          <div class="col-xs-12 col-md-12 col-lg-12">
            <div class="panel panel-success">
              <div class="panel-body">
                <div>
                  Active Deal: <br />
                  <%= deal.title %>
                </div>
                <div>
                  <strong>Was Valid:</strong> <%= deal_valid_time(deal) %>
                </div>
                <div>
                  Once you turn on a deal it is bringing for the duration you selected and will be turned off automaticaly afterwards.
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      You have no active deals at the moment. You can create it <%= link_to "Now", "#new-deal", class: "btn btn-success btn-outlet" %>
    <% end %>
  </div>
</div>

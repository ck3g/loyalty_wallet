<div class="dashboard dashboard--vendor center-block">
  <h3 class="dashboard__title"><%= @deal.vendor_name %></h3>

  <%= render 'shared/vendor_tabs' %>

  <div class="tab-content clearfix">
    <div class="deals deals--vendor" id="new-deal">
      <%= render 'form', deal: @deal %>

      <div class="spacer"></div>

      <%= render 'active', active_deals: @active_deals %>
      <%= render 'upcoming', upcoming_deals: @upcoming_deals %>
      <%= render 'expired', expired_deals: @expired_deals %>
    </div>
  </div>
</div>
